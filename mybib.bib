doi = {10.1002/ggge.20080},
file = {:cmld/data2/hinest/mendeley/mendeley{\_}library/How do “ghost transients” from past earthquakes affect GPS slip rate estimates on southern California faults{\_} - Hearn - 2013 - Geoch.pdf:pdf},
isbn = {1525-2027},
issn = {15252027},
journal = {Geochemistry, Geophysics, Geosystems},
keywords = {GPS velocity field,block models,earthquake cycle model,fault slip rates,seismic hazard,viscoelastic relaxation},
number = {4},
pages = {828--838},
title = {{How do "ghost transients" from past earthquakes affect GPS slip rate estimates on southern California faults?}},
volume = {14},
year = {2013}
}
