doi = {10.1029/2003JB002925},
file = {:cmld/data2/hinest/mendeley/mendeley{\_}library/Montesi2004.pdf:pdf},
isbn = {0148-0227},
issn = {01480227},
journal = {Journal of Geophysical Research B: Solid Earth},
