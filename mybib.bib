journal = {Geophysical Journal International},
keywords = {Creep and deformation,Crust and lithosphere,Mechanics, theory, and modelling,Rheology,Seismic cycle,Transient deformation},
pages = {769--784},
title = {{The signature of depth-dependent viscosity structure in post-seismic deformation}},
