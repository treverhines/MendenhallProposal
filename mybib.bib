doi = {10.1130/GSAT01804-5A.1},
file = {:cmld/data2/hinest/mendeley/mendeley{\_}library/ci2011May2718541937182ThatcherPollitz2008.pdf:pdf},
isbn = {1303357100},
issn = {10525173},
journal = {GSA Today},
number = {4},
pages = {4--11},
title = {{Temporal evolution of continental lithospheric strength in actively deforming regions}},
volume = {18},
year = {2008}
}
@article{Boatwright1996,
