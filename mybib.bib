file = {:cmld/data2/hinest/mendeley/mendeley{\_}library/RathbunMarone2010.pdf:pdf},
issn = {0148-0227},
journal = {Journal of Geophysical Research},
pages = {1--16},
title = {{Effect of strain localization on frictional behavior of sheared granular materials}},
volume = {115},
year = {2010}
}
